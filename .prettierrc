{
  "printWidth": 100,
  "trailingComma": "es5",
  "bracketSameLine": false,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "objectWrap": "collapse",
  "quoteProps": "preserve",
  "singleAttributePerLine": false,
  "plugins": ["@prettier/plugin-php", "@shufo/prettier-plugin-blade"],
  "braceStyle": "1tbs",
  "wrapAttributes": "aligned-multiple",
  "wrapAttributesMinAttrs": 3,
  "overrides": [{ "files": ["*.blade.php"], "options": { "parser": "blade", "tabWidth": 2 } }]
}
